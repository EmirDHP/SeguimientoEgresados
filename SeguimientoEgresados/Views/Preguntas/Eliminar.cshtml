@model SeguimientoEgresados.Models.Preguntas

@{
    ViewBag.Title = "Eliminar";
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p><i class="fa fa-exclamation-triangle" style="font-size: 75px; color: #ffb55a;"></i></p>
                <p>¿Esta seguro eliminar esta publicación?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->


<div class="card shadow-lg mb-5 bg-body rounded">
    <div class="card-header">
        <h3>Eliminar de Encuesta</h3>
    </div>
    <div class="card-body">
        <div>

            <div class="my-3 p-3 bg-body rounded shadow-sm">
                <div class="d-flex text-muted pt-3">
                    <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                        <div class="d-flex justify-content-between">
                            <strong class="text-gray-dark">Nombres</strong>
                        </div>
                        <span class="d-block">@Html.DisplayFor(model => model.IP_Nombres) </span>
                    </div>
                </div>

                <div class="d-flex text-muted pt-3">
                    <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                        <div class="d-flex justify-content-between">
                            <strong class="text-gray-dark">Apellido Paterno</strong>
                        </div>
                        <span class="d-block">@Html.DisplayFor(model => model.IP_ApellidoPaterno) </span>
                    </div>
                </div>

                    <div class="d-flex text-muted pt-3">
                        <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                            <div class="d-flex justify-content-between">
                                <strong class="text-gray-dark">Apellido Materno</strong>
                            </div>
                            <span class="d-block">@Html.DisplayFor(model => model.IP_ApellidoMaterno) </span>
                        </div>
                    </div>
                    <div class="d-flex text-muted pt-3">
                        <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                            <div class="d-flex justify-content-between">
                                <strong class="text-gray-dark">Matricula</strong>
                            </div>
                            <span class="d-block">@Html.DisplayFor(model => model.IP_Matricula)</span>
                        </div>
                    </div>

                </div>

                <div>
                    @Html.ActionLink("Regresar", "Index", new { id = Model.IdPregunta }, new { @class = "btn btn-primary btn-md" })
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>


