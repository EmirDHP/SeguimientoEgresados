@model SeguimientoEgresados.Models.PUBLICACIONE

@{
    ViewBag.Title = "NuevaPublicacion";
}

@using (Html.BeginForm("NuevaPublicacion", "Publicaciones", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="card shadow">
        <div class="card-header">
            Nueva publicación
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="formFile" class="form-label">Título de la nota</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label for="formFile" class="form-label">Nombre de la empresa</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreEmpresa, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <label for="formFile" class="form-label">Tipo de trabajo</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipo_Trabajo,
                new SelectList(ViewBag.TipoTrabajo, "IdTipo_trabajo", "Tipo_Trabajo"),
                new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.Tipo_Trabajo, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label for="formFile" class="form-label">Descripción</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descripcion, 7, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="col-md-10">
                <label for="formFile" class="form-label">Subir imagen</label>
                <input class="form-control" type="file" id="formFile" name="ImagenFile" required>
            </div>
            <br />

            <div class="d-grid gap-2 d-md-flex justify-content-center">
                <div>
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary btn-md me-md-2" })
                </div>
                <div>
                    <input type="submit" value="Publicar" class="btn btn-success" />
                </div>
            </div>

        </div>
    </div>
    <br />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
