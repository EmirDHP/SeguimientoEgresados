<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Restablecer Contraseña</h3></div>
                <div class="card-body">
                    <form action="@Url.Content("~/Access/Recovery")" method="post">
                        @Html.HiddenFor(d => d.token)
                        <div class="mb-3">
                            <lable>Escribe contraseña nueva</lable>
                            @Html.PasswordFor(d => d.Password, new { @class = "from-control col-12" })
                            @Html.ValidationMessageFor(d => d.Password, null, new { @style = "color:red;" })
                        </div>
                        <div class="mb-3">
                            <lable>Vuelve a escribir tu contraseña nueva</lable>
                            @Html.PasswordFor(d => d.Password2, new { @class = "from-control col-12" })
                            @Html.ValidationMessageFor(d => d.Password2, null, new { @style = "color:red;" })
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Restablecer</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="~/Login/Index">¿Ya tienes una cuenta? ¡Inicia sesión aquí!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
