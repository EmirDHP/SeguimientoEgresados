<!-- ======= Bolsa de trabajo titulo ======= -->
<section id="services" class="services section-bg">
    <div class="container">
        <div class="section-title">
            <span>Bolsa de trabajo</span>
            <h2>Bolsa de trabajo</h2>
            @*<p>Sit sint consectetur velit quisquam cupiditate impedit suscipit alias</p>*@
        </div>
    </div>
</section>
<br />
<!-- Termina seccion -->

<!--Section: Vacantes -->

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-lg">
                <img src="~/Images/Publicaciones/@Html.DisplayFor(modelItem => item.Imagen)" class="card-img-top" alt="" width="300px;" height="350px;" />
                <div class="card-body">
                    <p class="card-text small"><span class="far fa-calendar-alt me-2"></span>@Html.DisplayFor(modelItem => item.FechaPublicaciones)</p>
                    <h5 class="card-title"><strong>@Html.DisplayFor(modelItem => item.Titulo)</strong> </h5>
                    <p class="card-text justify-content-center">
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </p>
                </div>
                <div class="card-footer ">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        @Html.ActionLink("Detalles", "Detalles", new { id = item.IdPublicacion }, new { @class = "btn btn-primary"})
                        @*<button class="btn btn-primary" type="button">Detalles</button>*@
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
